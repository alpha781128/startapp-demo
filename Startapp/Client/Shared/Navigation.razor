@inherits NavigationBase
@implements IDisposable
<!-- Navigation -->
<header>

    <!-- Sidebar navigation -->
    <div id="slide-out" class="side-nav side wide sn-bg-1">
        <ul class="custom-scrollbar">

            <li>
                <div class="logo-wrapper sn-ad-avatar-wrapper">
                    <a href="#"><img src="@Profile.Pic" class="rounded-circle"><span>@Profile.FullName</span></a>
                </div>
            </li>
      
            <li>
                <ul class="collapsible collapsible-accordion">
                    <li>
                        <a id="toggle" class="waves-effect active"><i id="min-slide" class="sv-slim-icon fas fa-angle-double-left"></i>@Translate.Keys["MinimizeMenu"]</a>
                    </li>
                    <li>
                        <a class="collapsible-header waves-effect arrow-r active"> <i class="sv-slim-icon fas fa-th-large"></i>@Translate.Keys["MyDashboard"] <i class="fas fa-angle-down rotate-icon"></i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a href="/articles" class="waves-effect active">
                                        <span class="sv-slim"> <i class="fas fa-th"></i> </span>
                                        <span class="sv-normal"> <i class="sv-slim-icon fas fa-th"></i>@Translate.Keys["MyArticles"] </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/cart" class="waves-effect">
                                        <span class="sv-slim"> <i class="fas fa-shopping-cart"></i> </span>
                                        <span class="sv-normal"><i class="sv-slim-icon fas fa-shopping-cart"> </i>@Translate.Keys["Cart"]</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li>
                        <a class="collapsible-header waves-effect arrow-r active"> <i class="sv-slim-icon fas fa-sliders-h"></i>@Translate.Keys["Settings"] <i class="fas fa-angle-down rotate-icon"></i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a href="/Settings" class="waves-effect">
                                        <span class="sv-slim"> <i class="fas fa-cogs"></i> </span>
                                        <span class="sv-normal"> <i class="sv-slim-icon fas fa-cogs"></i>@Translate.Keys["Settings"] </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Profile" class="waves-effect">
                                        <span class="sv-slim"> <i class="far fa-address-card"></i> </span>
                                        <span class="sv-normal"><i class="sv-slim-icon far fa-address-card"> </i>@Translate.Keys["Profile"]</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <AuthorizeView Roles="administrator">
                        <li>
                            <a class="collapsible-header waves-effect arrow-r"><i class="sv-slim-icon fas fa-user-tie"></i>@Translate.Keys["Admin"]<i class="fas fa-angle-down rotate-icon"></i></a>
                            <div class="collapsible-body">
                                <ul>

                                    <li>
                                        <a href="/users" class="waves-effect">
                                            <span class="sv-slim"> <i class="fas fa-users"> </i> </span>
                                            <span class="sv-normal"><i class="sv-slim-icon fas fa-users"></i>@Translate.Keys["Users"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/roles" class="waves-effect">
                                            <span class="sv-slim"> <i class="fas fa-users-cog"></i> </span>
                                            <span class="sv-normal"><i class="sv-slim-icon fas fa-users-cog"></i>@Translate.Keys["Roles"]</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </AuthorizeView>

                    <li>
                        <a class="collapsible-header waves-effect arrow-r"><i class="sv-slim-icon fas fa-user-md"></i> @Translate.Keys["About"]<i class="fas fa-angle-down rotate-icon"></i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a href="/about" class="waves-effect">
                                        <span class="sv-slim"><i class="fas fa-user-md"></i></span>
                                        <span class="sv-normal"><i class="sv-slim-icon fas fa-user-md"></i>@Translate.Keys["About"]</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/contact" class="waves-effect">
                                        <span class="sv-slim"> <i class="far fa-envelope"></i></span>
                                        <span class="sv-normal"><i class="sv-slim-icon far fa-envelope"></i>@Translate.Keys["ContactUs"]</span>
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </li>

                </ul>
            </li>
        </ul>
        <div class="sidenav-bg rgba-blue-strong"></div>
    </div>
    <!-- Sidebar navigation -->

    <!-- Navbar -->
    <nav class="mb-1 navbar nav fixed-top navbar-1 navbar-collapse navbar-expand-lg navbar-dark scrolling-navbar blue-gradient-rgba">
        <div class="container">
            <!-- SideNav slide-out button -->
            <div class="float-left mr-2">
                <a data-activates="slide-out" class="button-collapse"><span class="navbar-toggler-icon"></span></a>
            </div>

            <a class="navbar-brand waves-effect waves-light font-weight-bold" href="/">@Translate.Keys["AppTitle"]</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-555"
                    aria-controls="navbarSupportedContent-555" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent-555">
                <form class="search form-inline mr-auto my-0">
                    <div class="md-form form-group w-100 my-0">
                        <input class="form-control w-100" type="text" placeholder="@Translate.Keys["Search"]" aria-label="Search">
                    </div>
                </form>

                <!-- Links -->

                <ul class="navbar-nav my-0">
                    <li class="nav-item active">
                        <a class="nav-link nav-collapse waves-effect waves-light font-weight-bold" href="/">
                            <i class="fas fa-home light-green-text"></i> @Translate.Keys["Home"]
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-collapse font-weight-bold" href="/cart">

                            <span class="badge danger-color cartSpan"></span>

                            <i class="fas fa-shopping-cart light-green-text" aria-hidden="true"></i>

                            <span class="clearfix d-none d-sm-inline-block">@Translate.Keys["Cart"]</span>

                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link nav-collapse waves-effect waves-light font-weight-bold" href="/data">
                            <i class="far fa-hdd light-green-text"></i> @Translate.Keys["Data"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-collapse waves-effect waves-light font-weight-bold" href="/contact">
                            <i class="far fa-address-card light-green-text"></i> @Translate.Keys["Contact"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-collapse waves-effect waves-light font-weight-bold" href="/about">
                            <i class="fas fa-user-md light-green-text"></i> @Translate.Keys["About"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-collapse waves-effect waves-light font-weight-bold" href="/plans">
                            <i class="fas fa-dollar-sign light-green-text"></i> @Translate.Keys["Plans"]
                        </a>
                    </li>
                    <CascadingValue Value="Profile">
                        <LoginDisplay @ref="LoginDisplay" OnLogOutAsync="OnLogOutAsync"></LoginDisplay>
                    </CascadingValue>

                </ul>

            </div>

        </div>
    </nav>  

    <!-- Navbar -->
</header>
<!-- Navigation -->
