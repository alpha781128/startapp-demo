<!-- Section related category products -->
<section>

    @if (Loading)
    {
<Spinner /> }
else
{

@if (Articles.Count > 0)
{
<div class="row">
    <div class="col-12">
        <div class="row">
            @foreach (var article in Articles)
            {
<div class="col-lg-6 col-md-6 mb-4">
    <!-- Card -->
    <div class="card card-ecommerce">
        <!-- Grid row -->
        <div class="row">
            <!-- Grid column -->
            <div class="col-6 d-flex align-items-center">
                <!-- Card image -->
                <div class="view overlay">
                    <a href="@($"/articledetails/{article.Id}")">
                        <img src="@(Picture(article.Pictures.FirstOrDefault()))" class="img-fluid" alt="">
                    </a>
                </div>
                <!-- Card image -->
            </div>
            <!-- Grid column -->
            <div class="col-6 pl-0">
                <!-- Card content -->
                <div class="card-body">
                    <!-- Category & Title -->
                    <h5 class="card-title mb-1">
                        <strong><a href="" class="dark-grey-text">@article.Title</a></strong>
                    </h5>
                    <span class="badge badge-danger mb-2">bestseller</span>
                    <!-- Rating -->
                    <ul class="rating">
                        <li><i class="fas fa-star blue-text"></i></li>
                        <li><i class="fas fa-star blue-text"></i></li>
                        <li><i class="fas fa-star blue-text"></i></li>
                        <li><i class="fas fa-star blue-text"></i></li>
                        <li><i class="fas fa-star blue-text"></i></li>
                    </ul>

                    <!-- Card footer -->
                    <div class="card-footer pb-0">
                        <div class="row mb-0">
                            <span class="red-text">
                                <strong>$ @string.Format("{0:# ### ###.00}", article.SellingPrice)</strong>
                            </span>
                            <span class="grey-text">
                                <small>
                                    @if (article.OldPrice > 0)
                                    {
                                    <s>$ @string.Format("{0:# ### ###.00}", article.OldPrice)</s>
                                    }
                                </small>
                            </span>
                            <span class="float-right">
                                <a onclick="addToCart(@article.Id)" class="" data-toggle="tooltip" data-placement="top" title="Add to Cart">
                                    <i class="fas fa-shopping-cart ml-3"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
                <!-- Card content -->
            </div>
        </div>
    </div>
    <!-- Card -->
</div>}
        </div>
    </div>
</div>}
else
{
<div class="container text-center my-3">
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <h3 class="font-weight-bold text-white peach-gradient py-3">
                <strong> @Message </strong> <i class="far fa-sad-cry"></i>
            </h3>
        </div>
    </div>
</div>}}

</section>
<!-- Section top sellers products -->
