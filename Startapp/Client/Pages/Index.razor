@page "/"
@using Startapp.Client.Pages.Articles
@using Startapp.Client.Pages.Articles.Components

@inherits IndexBase

<main class="m-0">
    @*<Home />*@

    <div class="row">

        <!-- Content -->
        <div class="col-lg-12">

            <!-- Products Grid -->
            <section class="section">

                <div class="d-flex">
                    <div class="mr-auto">
                        <!-- Search form -->
                        <div class="search-form mx-0" role="search" style="max-width: 220px !important; display: inline-block">
                            <div class="form-group md-form my-0 waves-light">
                                <input @onkeyup="@(e => EnterKeyPress(e))" @oninput="(e => SearchKeyup(e))" value="@SearchTerm" type="text" class="form-control" placeholder="@Translate.Keys["Search"]">
                            </div>
                        </div>
                        <button disabled="@DisableSearch" @onclick="(() => Search())" class="btn aqua-gradient btn-sm btn-rounded">
                            <i class="fas fa-search text-white"></i>
                        </button>

                    </div>
                    <div>
                        @if (Filtred)
                        {
                            <a data-toggle="tooltip" data-placement="top" title="desactive filter" class="btn-floating btn-sm purple-gradient" @onclick="@(() => Filter())">
                                <i class="fas fa-filter"></i>
                            </a>
                        }
                    </div>
                </div>
                <div class="d-flex">
                    <div class="mr-auto">
                        <h4 class="font-weight-bold mt-1 title-1">
                            <strong>@Translate.Keys["Articles"]</strong>
                        </h4>
                    </div>
                </div>

                <hr class="teal mb-3">
                <!-- Grid row -->
                <ArticlesList Articles="Articles" Message="@Message" Loading="Loading"></ArticlesList>
                <!-- Grid row -->

                @if (Articles.Count > 0)
                {
                    <div class="row">
                        <div class="col">
                            <Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage" />
                        </div>
                    </div>
                }


                <!-- Section small products -->
                <Newest></Newest>
                <!-- Section small products -->
                <!-- Section products -->
                <TopViewed></TopViewed>
                <!-- Section products -->
                <!-- Section advertising 1 -->
                <TopSelled></TopSelled>
                <!-- Section advertising 1 -->
                <!-- Grid row -->
                <Randomm></Randomm>
                <!-- Grid row -->


            </section>
            <!-- Products Grid -->

        </div>
        <!-- Content -->

    </div>

</main>